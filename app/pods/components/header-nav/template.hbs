<div class="hero-head">
  <nav class="navbar is-fixed-top">
    <div class="container">
      <div class="navbar-brand">
        <span class="navbar-burger burger {{isActiveClass}}" data-target="navbarMenu" onclick={{action "showMenu"}}>
          <span></span>
          <span></span>
          <span></span>
        </span>
      </div>
      <div id="navbarMenu" class="navbar-menu {{isActiveClass}}">
        <div class="navbar-end">
          {{#with (find-by 'isIndex' true model) as |person|}}
            {{link-to "Overview" "index" class="navbar-item" activeClass="is-active"}}
          {{/with}}

          {{#each (sort-by 'index' (reject-by 'isIndex' model)) as |content|}}
            {{link-to content.linkName "content" content.url class="navbar-item" activeClass="is-active"}}
          {{/each}}
        </div>
      </div>
    </div>
  </nav>
</div>
